<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_graph"
    app:startDestination="@id/shoppingFragment">

    <fragment
        android:id="@+id/shoppingFragment"
        android:name="com.androiddevs.shoppinglisttestingyt.ui.ShoppingFragment"
        android:label="ShoppingFragment" >
        <action
            android:id="@+id/action_shoppingFragment_to_addShopppingItemFragment"
            app:destination="@id/addShopppingItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/addShopppingItemFragment"
        android:name="com.androiddevs.shoppinglisttestingyt.ui.AddShopppingItemFragment"
        android:label="AddShopppingItemFragment" >
        <action
            android:id="@+id/action_addShopppingItemFragment_to_imagePickFragment"
            app:destination="@id/imagePickFragment" />
    </fragment>
    <fragment
        android:id="@+id/imagePickFragment"
        android:name="com.androiddevs.shoppinglisttestingyt.ui.ImagePickFragment"
        android:label="ImagePickFragment" />
</navigation>